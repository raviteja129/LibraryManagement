<div class="container">
    <div class="spacer"></div>
    <p class="fs-2 text-uppercase pHdrs"><span>MEMBERS LIST</span></p>
    <form action="/administrator/filterMembers" method="post">
        <div class="row align-items-center" style="padding:15px 0;">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="input-group mb-3">
                    <input type="text" name="searchUser" class="form-control" placeholder="Search users" aria-label="Recipient's username" aria-describedby="button-addon2"  style="border: 1px solid black;">
                    <button class="btn btn-success" type="submit" id="button-addon2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" fill="currentColor" class="bi bi-search" viewBox="0 0 17 17">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="col-3"></div>
        </div>
    </form>
    <div class="row">
        <div class="col-sm-12 mb-3 mb-sm-0">
            <table class="table text-center table-bordered table-hover" style="margin-top: 20px;">
                <thead class="table-success text-center">
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">EmailID</th>
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data && data?.length > 0) {
                        for(let i = 0; i < data?.length; i++) { %>
                    <tr style="vertical-align: middle;">
                        <th scope="row"><%= data[i].id%></th>
                        <td><%= data[i].firstname%></td>
                        <td><%= data[i].lastname%></td>
                        <td><%= data[i].email%></td>
                        <td>
                            <button type="button" class="btn btn-danger">
                                <svg xmlns="http://www.w3.org/2000/svg" width="17" fill="currentColor" class="bi bi-trash fw-bold" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path>
                                </svg>
                            </button>
                            <button type="button" class="btn btn-warning">
                            <svg xmlns="http://www.w3.org/2000/svg" width="17" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                            </svg>
                            </button>
                        </td>
                    </tr>
                    <% } } else { %>
                    <tr style="vertical-align: middle;">
                        <th scope="row">No Data Found</th>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>