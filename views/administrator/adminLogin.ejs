<div class="container">
    <div aria-live="polite" aria-atomic="true" class="position-relative top-0 end-0">
        <div class="toast-container top-0 end-0 p-3">
            <% if (success && success.length > 0) { %>
            <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="flashMessage" style="display: flow;">
                <div class="toast-header success-toast">
                    <strong class="me-auto" style="text-transform: uppercase;">Success</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body success-toast">
                    <%= success %>
                </div>
            </div>
            <% } %>
            <% if (errors && errors.length > 0) { %>
                <% errors.forEach(function(error) { %>
                <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="flashMessage" style="display: flow;">
                    <div class="toast-header error-toast">
                        <strong class="me-auto" style="text-transform: uppercase;">Error</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body error-toast">
                        <%= error.msg %>
                    </div>
                </div>
                <% }); %>
            <% } %>
            <% if(messages.invalid) { %>
                <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="flashMessage" style="display: flow;">
                    <div class="toast-header error-toast">
                        <strong class="me-auto" style="text-transform: uppercase;">Error</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body error-toast">
                        <%= messages.invalid %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <div class="loginContainer">
        <form action="/administrator/adminLogin" method="post">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label fw-bold">Email</label>
                <div class="col-sm-10">
                    <input type="email" name="email" class="form-control" id="inputEmail3" style="border: 1px solid black">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label fw-bold">Password</label>
                <div class="col-sm-10">
                    <input type="password" name="password" class="form-control" id="inputPassword3" style="border: 1px solid black">
                </div>
            </div>
            <button type="submit" class="btn btn-primary text-uppercase fw-bold">Sign in</button>
        </form>
    </div>
</div>